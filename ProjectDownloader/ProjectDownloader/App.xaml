<Application x:Class="ProjectDownloader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjectDownloader"
             StartupUri="ProjectDownloaderWnd.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="DefaultButtonStyle">
            <Setter Property="Padding" Value="8,5,8,5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#fff" />
            <Setter Property="Foreground" Value="#222" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style TargetType="Label" x:Key="StatusLabel">
            <Setter Property="Foreground" Value="#f3f3f3" />
        </Style>
        
        <local:TimeSpanConverter x:Key="formattedTimeSpan" />
    </Application.Resources>
</Application>
